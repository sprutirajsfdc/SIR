<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <assignments>
        <description>Original_UTM_Source__c value or &apos;Sothebysrealty.com&apos; will be copied to Lead Source  field.</description>
        <name>Assign_Lead_Source_value</name>
        <label>Assign Lead Source value</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <assignmentItems>
            <assignToReference>$Record.LeadSource</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Sothebysrealty.com</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <description>Before a Contact is created or updated, this flow will check value of Original UTM Source. If the value is equal to &apos;Sothebysrealty.com&apos;, then this value will be selected for Lead Source field also.</description>
    <environments>Default</environments>
    <interviewLabel>Contact | Assign Sothebysrealty.com as Lead Source {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Contact | Assign Sothebysrealty.com as Lead Source</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Assign_Lead_Source_value</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Original_UTM_Source__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Original_UTM_Source__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Sothebysrealty.com</stringValue>
            </value>
        </filters>
        <filters>
            <field>LeadSource</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Contact</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
